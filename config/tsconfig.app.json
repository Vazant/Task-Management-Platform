{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../client/out-tsc/app",
    "types": []
  },
  "angularCompilerOptions": {
    "enableBlockType": true
  },
  "include": [
    "../client/src/**/*.ts"
  ],
  "exclude": [
    "../client/src/**/*.spec.ts"
  ]
}
