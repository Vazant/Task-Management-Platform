{
  "endpoints": [
    {
      "method": "POST",
      "path": "/api/auth/login",
      "description": "User login endpoint",
      "requestDto": {
        "email": "string",
        "password": "string"
      },
      "responseDto": {
        "user": {
          "id": "string",
          "email": "string",
          "username": "string",
          "role": "user | admin",
          "avatar": "string?",
          "createdAt": "Date",
          "lastLogin": "Date",
          "preferences": {
            "theme": "light | dark",
            "language": "string",
            "notifications": {
              "email": "boolean",
              "push": "boolean",
              "taskUpdates": "boolean",
              "projectUpdates": "boolean"
            }
          }
        },
        "token": "string",
        "refreshToken": "string"
      },
      "security": "public"
    },
    {
      "method": "POST",
      "path": "/api/auth/register",
      "description": "User registration endpoint",
      "requestDto": {
        "email": "string",
        "username": "string",
        "password": "string",
        "confirmPassword": "string"
      },
      "responseDto": {
        "user": "User",
        "token": "string",
        "refreshToken": "string"
      },
      "security": "public"
    },
    {
      "method": "POST",
      "path": "/api/auth/refresh",
      "description": "Refresh JWT token",
      "requestDto": {
        "refreshToken": "string"
      },
      "responseDto": {
        "token": "string",
        "refreshToken": "string"
      },
      "security": "public"
    },
    {
      "method": "POST",
      "path": "/api/auth/forgot-password",
      "description": "Request password reset",
      "requestDto": {
        "email": "string"
      },
      "responseDto": {
        "message": "string"
      },
      "security": "public"
    },
    {
      "method": "POST",
      "path": "/api/auth/reset-password",
      "description": "Reset password with token",
      "requestDto": {
        "token": "string",
        "password": "string"
      },
      "responseDto": {
        "message": "string"
      },
      "security": "public"
    },
    {
      "method": "GET",
      "path": "/api/profile",
      "description": "Get current user profile",
      "requestDto": null,
      "responseDto": {
        "id": "string",
        "username": "string",
        "email": "string",
        "firstName": "string?",
        "lastName": "string?",
        "avatar": "string?",
        "role": "string?",
        "lastLogin": "Date?",
        "createdAt": "Date",
        "updatedAt": "Date"
      },
      "security": "authenticated"
    },
    {
      "method": "PUT",
      "path": "/api/profile",
      "description": "Update user profile",
      "requestDto": {
        "username": "string",
        "email": "string",
        "firstName": "string?",
        "lastName": "string?"
      },
      "responseDto": "UserProfile",
      "security": "authenticated"
    },
    {
      "method": "POST",
      "path": "/api/profile/avatar",
      "description": "Upload user avatar",
      "requestDto": {
        "avatar": "File (multipart/form-data)"
      },
      "responseDto": "UserProfile",
      "security": "authenticated"
    },
    {
      "method": "DELETE",
      "path": "/api/profile/avatar",
      "description": "Delete user avatar",
      "requestDto": null,
      "responseDto": "UserProfile",
      "security": "authenticated"
    },
    {
      "method": "POST",
      "path": "/api/profile/change-password",
      "description": "Change user password",
      "requestDto": {
        "currentPassword": "string",
        "newPassword": "string"
      },
      "responseDto": {
        "message": "string"
      },
      "security": "authenticated"
    }
  ],
  "models": {
    "User": {
      "id": "string",
      "email": "string",
      "username": "string",
      "role": "string (user | admin)",
      "avatar": "string?",
      "createdAt": "Date",
      "lastLogin": "Date",
      "preferences": "UserPreferences"
    },
    "UserPreferences": {
      "theme": "string (light | dark)",
      "language": "string",
      "notifications": "NotificationSettings"
    },
    "NotificationSettings": {
      "email": "boolean",
      "push": "boolean",
      "taskUpdates": "boolean",
      "projectUpdates": "boolean"
    },
    "UserProfile": {
      "id": "string",
      "username": "string",
      "email": "string",
      "firstName": "string?",
      "lastName": "string?",
      "avatar": "string?",
      "role": "string?",
      "lastLogin": "Date?",
      "createdAt": "Date",
      "updatedAt": "Date"
    },
    "LoginRequest": {
      "email": "string",
      "password": "string"
    },
    "LoginResponse": {
      "user": "User",
      "token": "string",
      "refreshToken": "string"
    },
    "RegisterRequest": {
      "email": "string",
      "username": "string",
      "password": "string",
      "confirmPassword": "string"
    },
    "UpdateProfileRequest": {
      "username": "string",
      "email": "string",
      "firstName": "string?",
      "lastName": "string?"
    },
    "ChangePasswordRequest": {
      "currentPassword": "string",
      "newPassword": "string"
    }
  },
  "security": {
    "protectedPaths": [
      "/api/profile/**",
      "/api/user/**"
    ],
    "publicPaths": [
      "/api/auth/login",
      "/api/auth/register",
      "/api/auth/refresh",
      "/api/auth/forgot-password",
      "/api/auth/reset-password"
    ],
    "roles": [
      "ROLE_USER",
      "ROLE_ADMIN"
    ],
    "jwtConfig": {
      "tokenExpiration": "15 minutes",
      "refreshTokenExpiration": "7 days",
      "secretKey": "to be configured in application.properties"
    }
  },
  "validations": {
    "email": {
      "pattern": "valid email format",
      "required": true
    },
    "username": {
      "minLength": 3,
      "maxLength": 50,
      "pattern": "alphanumeric with underscores",
      "required": true
    },
    "password": {
      "minLength": 8,
      "pattern": "at least one uppercase, one lowercase, one digit",
      "required": true
    },
    "firstName": {
      "maxLength": 50,
      "required": false
    },
    "lastName": {
      "maxLength": 50,
      "required": false
    },
    "avatar": {
      "maxSize": "5MB",
      "allowedFormats": ["jpg", "jpeg", "png", "gif"],
      "required": false
    }
  },
  "ngrxActions": {
    "auth": [
      "login",
      "loginSuccess",
      "loginFailure",
      "register",
      "registerSuccess",
      "registerFailure",
      "logout",
      "logoutSuccess",
      "refreshToken",
      "refreshTokenSuccess",
      "refreshTokenFailure",
      "forgotPassword",
      "forgotPasswordSuccess",
      "forgotPasswordFailure",
      "resetPassword",
      "resetPasswordSuccess",
      "resetPasswordFailure",
      "clearAuthError"
    ]
  },
  "authState": {
    "user": "User | null",
    "token": "string | null",
    "refreshToken": "string | null",
    "loading": "boolean",
    "error": "string | null",
    "isAuthenticated": "boolean"
  }
}
