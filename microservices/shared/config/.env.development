# Development Environment Configuration
# For local development

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SERVICE_NAME=microservice
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_CONTEXT_PATH=

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/taskboard_dev
DATABASE_USERNAME=taskboard_dev
DATABASE_PASSWORD=dev_password
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=true

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=taskboard-dev-group
KAFKA_AUTO_OFFSET_RESET=earliest

# ===========================================
# ACTUATOR CONFIGURATION
# ===========================================
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus,env,configprops
ACTUATOR_BASE_PATH=/actuator
ACTUATOR_HEALTH_DETAILS=always
ACTUATOR_HEALTH_COMPONENTS=always
PROMETHEUS_ENABLED=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL_ROOT=DEBUG
LOG_LEVEL_TASKBOARD=TRACE
LOG_PATTERN_CONSOLE="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"
LOG_PATTERN_FILE="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"

# ===========================================
# SERVICE URLs
# ===========================================
USER_SERVICE_URL=http://localhost:8081
TASK_SERVICE_URL=http://localhost:8082
PROJECT_SERVICE_URL=http://localhost:8083
TIME_SERVICE_URL=http://localhost:8084
ANALYTICS_SERVICE_URL=http://localhost:8085
NOTIFICATION_SERVICE_URL=http://localhost:8086
SEARCH_SERVICE_URL=http://localhost:8087
FILE_SERVICE_URL=http://localhost:8088
GATEWAY_SERVICE_URL=http://localhost:8000

# ===========================================
# EXTERNAL SERVICES
# ===========================================
PROMETHEUS_URL=http://localhost:9090
JAEGER_URL=http://localhost:14268
KAFKA_UI_URL=http://localhost:8080
GRAFANA_URL=http://localhost:3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRATION=3600
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true
