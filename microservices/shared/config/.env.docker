# Docker Environment Configuration
# For Docker containers

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SERVICE_NAME=microservice
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_CONTEXT_PATH=

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=jdbc:postgresql://postgres:5432/taskboard
DATABASE_USERNAME=taskboard_user
DATABASE_PASSWORD=taskboard_password
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms

# ===========================================
# KAFKA CONFIGURATION
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP=taskboard-docker-group
KAFKA_AUTO_OFFSET_RESET=earliest

# ===========================================
# ACTUATOR CONFIGURATION
# ===========================================
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
ACTUATOR_BASE_PATH=/actuator
ACTUATOR_HEALTH_DETAILS=when-authorized
ACTUATOR_HEALTH_COMPONENTS=when-authorized
PROMETHEUS_ENABLED=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_TASKBOARD=INFO
LOG_PATTERN_CONSOLE="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"
LOG_PATTERN_FILE="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"

# ===========================================
# SERVICE URLs
# ===========================================
USER_SERVICE_URL=http://user-service:8080
TASK_SERVICE_URL=http://task-service:8080
PROJECT_SERVICE_URL=http://project-service:8080
TIME_SERVICE_URL=http://time-service:8080
ANALYTICS_SERVICE_URL=http://analytics-service:8080
NOTIFICATION_SERVICE_URL=http://notification-service:8080
SEARCH_SERVICE_URL=http://search-service:8080
FILE_SERVICE_URL=http://file-service:8080
GATEWAY_SERVICE_URL=http://kong:8000

# ===========================================
# EXTERNAL SERVICES
# ===========================================
PROMETHEUS_URL=http://prometheus:9090
JAEGER_URL=http://jaeger:14268
KAFKA_UI_URL=http://kafka-ui:8080
GRAFANA_URL=http://grafana:3000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
JWT_SECRET=docker-jwt-secret-key
JWT_EXPIRATION=3600
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_HEALTH_CHECKS=true
