{
  "name": "task-management-platform",
  "version": "1.0.0",
  "description": "Full-stack task management platform with Angular frontend and Spring Boot backend",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run start --workspace=client",
    "dev:server": "npm run start --workspace=server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "test": "npm run test --workspaces",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint --workspace=client",
    "lint:server": "npm run lint --workspace=server",
    "format": "prettier --write \"**/*.{ts,js,json,html,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,scss,css,md}\"",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "clean": "npm run clean --workspaces",
    "clean:client": "npm run clean --workspace=client",
    "clean:server": "npm run clean --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/task-management-platform.git"
  },
  "keywords": [
    "angular",
    "spring-boot",
    "task-management",
    "full-stack",
    "typescript",
    "java"
  ],
  "author": "Your Name",
  "license": "MIT"
} 