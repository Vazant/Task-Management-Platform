### Pre-commit hooks
```bash
#!/bin/sh
# .git/hooks/pre-commit

echo "Checking daily log format..."

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞–ª–∏—á–∏—è –¥–∞—Ç—ã –≤ —Ñ–∞–π–ª–∞—Ö daily-logs/
if [ -d "daily-logs" ]; then
    for log_file in daily-logs/*.md; do
        if [ -f "$log_file" ]; then
            if ! grep -qE "^\*\*\([0-9]{2}\.[0-9]{2}\.[0-9]{2}\)\*\*" "$log_file"; then
                echo "ERROR: Date format not found in $log_file"
                exit 1
            fi
            
            # –ü—Ä–æ–≤–µ—Ä–∫–∞ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã—Ö —Å–µ–∫—Ü–∏–π
            required_sections=("–ö–æ–Ω—Ç–µ–∫—Å—Ç" "–°–ª–µ–¥—É—é—â–∏–µ —à–∞–≥–∏")
            for section in "${required_sections[@]}"; do
