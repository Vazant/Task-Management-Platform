<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-task-attachments-table" author="system">
        <createTable tableName="task_attachments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_task_attachments_task_id" referencedTableName="tasks" referencedColumnNames="id"/>
            </column>
            <column name="uploader_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_task_attachments_uploader_id" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="original_filename" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="stored_filename" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="content_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="storage_path" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="task_attachments" indexName="idx_task_attachments_task_id">
            <column name="task_id"/>
        </createIndex>

        <createIndex tableName="task_attachments" indexName="idx_task_attachments_uploader_id">
            <column name="uploader_id"/>
        </createIndex>

        <createIndex tableName="task_attachments" indexName="idx_task_attachments_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
